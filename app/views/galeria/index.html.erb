<h1>Lista de galeria</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Data</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @galeria.each do |galerium| %>
  <tr>
    <td><%= galerium.nome %></td>
    <td><%= galerium.data %></td>
    <td><%= link_to 'Mostrar', galerium %></td>
    <td><%= link_to 'Editar', edit_galerium_path(galerium) %></td>
    <td><%= link_to 'Excluir', galerium, method: :delete, data: { confirm: 'Deseja Realmente Excluir?' } %></td>
  </tr>
<% end %>
</table>

